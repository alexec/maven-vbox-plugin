Subject: [PATCH 1/1] Timeouts.

---
 src/main/vbox/app1/MediaRegistry.xml |    2 +-
 src/main/vbox/app1/Profile.xml       |    2 +-
 src/main/vbox/app1/Provisioning.xml  |    4 ++--
 3 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/src/main/vbox/app1/MediaRegistry.xml b/src/main/vbox/app1/MediaRegistry.xml
index 4f713ea..0587c8b 100644
--- a/src/main/vbox/app1/MediaRegistry.xml
+++ b/src/main/vbox/app1/MediaRegistry.xml
@@ -5,7 +5,7 @@
     </HardDisks>
     <DVDImages>
         <DVDImage uuid="dvd0"
-                  location="http://centos.serverspace.co.uk/centos/6.3/isos/i386/CentOS-6.3-i386-minimal.iso"/>
+                  location="ftp://ftp.mirrorservice.org/sites/mirror.centos.org/6.3/isos/i386/CentOS-6.3-i386-minimal.iso"/>
     </DVDImages>
     <FloppyImages>
         <FloppyImage uuid="floppy0" location="floppy0"/>
diff --git a/src/main/vbox/app1/Profile.xml b/src/main/vbox/app1/Profile.xml
index c67f354..cddc968 100644
--- a/src/main/vbox/app1/Profile.xml
+++ b/src/main/vbox/app1/Profile.xml
@@ -1,5 +1,5 @@
 <?xml version="1.0"?>
-<Profile xmlns="http://www.alexecollins.com/vbox/profile" type="headless">
+<Profile xmlns="http://www.alexecollins.com/vbox/profile" type="gui">
     <ping url="socket://192.168.56.2:22/"/>
     <ping url="socket://192.168.56.2:8080/"/>
 </Profile>
diff --git a/src/main/vbox/app1/Provisioning.xml b/src/main/vbox/app1/Provisioning.xml
index f88d206..1542dd0 100644
--- a/src/main/vbox/app1/Provisioning.xml
+++ b/src/main/vbox/app1/Provisioning.xml
@@ -5,7 +5,7 @@
         <KeyboardPutScanCodes keys="Esc"/>
         <Sleep seconds="2"/>
         <KeyboardPutScanCodes line="linux ks=floppy text"/>
-        <AwaitState state="poweroff" timeout="20 minutes"/>
+        <AwaitState state="poweroff" timeout="30 minutes"/>
     </Target>
     <Target name="run-post-install">
         <Exec>vboxmanage storageattach %NAME% --storagectl "IDE Controller" --port 0 --device 0 --type dvddrive --medium "%VBOX_ADDITIONS%"</Exec>
@@ -18,7 +18,7 @@ mkdir /media/floppy
 mount /dev/fd0 /media/floppy
 /media/floppy/post-install.sh
         </KeyboardPutScanCodes>
-        <AwaitState state="poweroff" timeout="20 minutes"/>
+        <AwaitState state="poweroff" timeout="30 minutes"/>
     </Target>
     <Target name="cleanup">
         <Exec>vboxmanage storageattach %NAME% --storagectl "Floppy Controller" --port 0 --device 0 --medium none</Exec>
